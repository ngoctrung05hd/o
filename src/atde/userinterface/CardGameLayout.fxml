<AnchorPane fx:id="background" prefHeight="556.0" prefWidth="733.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="atde.userinterface.CardGameController">
   <children>
